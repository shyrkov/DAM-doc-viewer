package org.jahia.modules.docviewer.rules

#list any import classes here.
import org.jahia.services.content.rules.*
import org.jahia.modules.docviewer.*
import org.slf4j.Logger

expander rules.dsl

#declare any global variables here
global User user
global Service service
global Logger logger
global DocumentViewRuleService documentViewService
###############################################################################

rule "Create SWF view of the document"
    when
		A file content has been modified
			- it is a viewable document
    then
        Create SWF view for the node
        Create a document thumbnail named "thumbnail" of size 150
end

